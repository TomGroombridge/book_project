      <link rel="shortcut icon" href="../favicon.ico"> 
      <link rel="stylesheet" type="text/css" href="css/demo.css" />
      <link rel="stylesheet" type="text/css" href="css/style_common.css" />
      <link rel="stylesheet" type="text/css" href="css/style1.css" />
      <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700,300,300italic' rel='stylesheet' type='text/css' />
      <script type="text/javascript" src="js/modernizr.custom.69142.js"></script> 

      <link rel="stylesheet" href="animate.min.css">
 
  </head>
  <body>
 

  <div class="container">
    <!-- Body of web page goes inside container tags -->

  <div id="webbrowser">
    <div class="col-xs-12 col-md-12">
      <div class="row">
        <div class="col-xs-12 col-md-4 col-md-offset-1" id="top">
          <h1>
            #dogearedpages
          </h1>
        </div>


        <div class="col-xs-12 col-md-3 col-md-offset-3" id="top">
          <p>Books can change you life</p>
        </div>
       </div>
        
       

       <%= render "submit_button" %>

      <div class="row">
  <div class="col-md-4 book" data-book-id="1" data-filled='false'>
    <!-- <div id="threebooks"> -->
      <div class="view view-third">
        <!-- <div class="panel-image"> -->
          <%= image_tag("", class: "panel-image-preview") %> 
        <!-- </div> -->
          <div class="mask">
            <div class="panel-body">
              <h2></h2>
              <h4></h4>
              <p></p>
              <br>
              <button class="btn-success next_book" id="choose_another">Wrong Cover?</button>
          </div>
        </div>
      </div>
    </div>

       

  <div class="col-md-4 book" data-book-id="2" data-filled='false'>
      <div class="view view-third">      
        <%= image_tag("", class: "panel-image-preview") %> 
        <div class="mask">
          <div class="panel-body">
            <h2></h2>
            <h4></h4>
            <p></p>
            <button class="btn-success next_book" id="choose_another">
              Wrong Cover
            </button>
          </div>
        </div>
      </div>
    </div>



  <div class="col-md-4 book" data-book-id="3" data-filled='false'>
    <div class="view view-third">      
        <%= image_tag("", class: "panel-image-preview") %> 
        <div class="mask">
          <div class="panel-body">
            <h2></h2>
            <h4></h4>
            <p>
           
            </p>
            <button class="btn-success next_book" id="choose_another">
              Wrong Cover
            </button>
          </div>
        </div>
      </div>
    </div>
</div>

       

      <div class="row" id="buttons">
        <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4">
            <li>
            <%= form_for @selection do |f| %>
              <%= f.hidden_field 'book_ids', multiple: true, value: nil, id: 'book1' %>
              <%= f.hidden_field 'book_ids', multiple: true, value: nil, id: 'book2' %>
              <%= f.hidden_field 'book_ids', multiple: true, value: nil, id: 'book3' %>

              <%= f.button do %>
                <i class="fa fa-twitter fa-5x"></i>
              <% end %>
            <% end %>
            </li>   
        </div>
      </div>

      <%= render :partial => 'layouts/footer' %>
    </div> 
   

   
    </div>

      

    </div> 
<!-- /container -->


          <!-- MOBILE SITE **** MOBILE SITE **** MOBILE SITE **** -->


    <div id="mobile">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"><a href="#">Your three Books</a>
                </li>
                <img src="images/mr_bump.jpg" style="height: 70px">
                </li>
                <img src="images/Mr._Tickle.jpg" style="height: 70px">
                <li><a href="#">Mr Tickle</a>
                </li>
                <img src="images/mr-strong.jpg" style="height: 70px">
                <li><a href="#">Mr Strong</a>
                </li>
                <a id="menu-close" href="#" class="btn btn-default"><i class="icon-reorder"></i>Select another</a>
                <a href="showbooks.html" class="btn btn-default"><i class="icon-reorder"></i>Share</a>
            </ul>





        </div>

        <!-- Page content -->
        <div id="page-content-wrapper">
            <div class="content-header">
                <h2>
                    #dogearedpages
                </h2>
            </div>
            <!-- Keep all page content within the page-content inset div! -->
            <div class="page-content inset">
                <div class="row">
                    <div class="col-md-12">
                        <p class="lead">A fun place where we can inspire our peers by sharing the three most influential literature pieces that have touched our lives</p>
                    </div>
                    <div class="col-s-10 col-md-6 col-md-offset-3">
                        <div class="form-group" id="title">        
                          <%= form_for @book do |f| %>
                            <%= f.text_field :title, class: "form-control" %>
                            <%= f.submit "Submit", class: "button button-flat-caution" %> 
                          <% end %>
                    </div>
                    <div class="col-md-4">
                        <p class="well">DROPDOWN & ERROR MESSAGE AREA</p>
                    </div>
                    <div class="col-s-4">
                        <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i>Show my Books</a>
                    </div>
                    

                    <div class="col-md-4 book" data-book-id="1" data-filled='false'>
                      <div class="panel panel-default" id="threebooks">
                      <div class="view view-third">
                      <div class="panel-image">
                        <%= image_tag("placeholder.jpg", class: "panel-image-preview") %> 
                      </div>
                        <div class="mask">
                      <div class="panel-body">
                          <h2></h2>
                          <h4></h4>
                          <p></p>
                        </div>
                      </div>
                      </div>
                        <button class="btn-success next_book" id="choose_another">Press for new cover</button>
                      </div>
                    </div>

                    <div class="col-s-4">
                        <a href="showbooks.html" class="btn btn-default"><i class="icon-reorder"></i>Share</a>
                    </div>
                </div>
            </div>
        </div>

    </div>




 
    <!-- Put just before closing body tag so pages load faster -->
    <!-- Obtain jquery javascript library from CDN -->
    <!-- Check http://code.jquery.com/ for latest version. -->
    <!-- Obtain Bootstrap javascript library from CDN (online service) so it doesn't have to be on my machine -->
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

    
  

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>



    <script>
      $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
      });
    </script>

    <script>
    $("#menu-close").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass();
    });
    </script>
 
 

  </body>
</html>


